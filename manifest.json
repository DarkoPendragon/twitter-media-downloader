{
  "manifest_version": 2,
  "name": "XVideoDL",
  "author": "Darko Pendragon",
  "description": "Button to download videos easily",
  "version": "1.0",
  "icons": {
    "16": "./assets/icon.png",
    "48": "./assets/icon.png",
    "128": "./assets/icon.png"
  },
  "permissions": [
    "tabs",
    "downloads"
  ],
  "background": {
    "scripts": ["/js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Download X Post",
    "default_icon": "./assets/icon.png"
  }
}
